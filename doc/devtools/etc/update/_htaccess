#
AuthUserFile TEMPLATEPATH/.htpasswd
AuthName "phpinfo password protection"
AuthType Basic
<Limit GET POST PUT>
	require valid-user
</Limit>

<FilesMatch "\.(bak|inc|inc\.php|lib|sh|sql|tpl)$">
	<IfModule mod_authz_core.c>
		Require all denied
	</IfModule>
	<IfModule !mod_authz_core.c>
		order deny,allow
		deny from all
	</IfModule>
</FilesMatch>